# AudD API for audio analysis
AUDD_API_KEY=your_audd_api_key_here

# AI Chat API
AI_API_KEY=your_ai_api_key_here
AI_BASE_URL=https://api.example.com/v1
AI_MODEL=gpt-4

# CORS origins (comma-separated for multiple)
CORS_ORIGINS=["http://localhost:3000"]

# Debug mode
DEBUG=false

# Redis
REDIS_URL=redis://localhost:6379/0

# Image Generation API
IMAGE_API_PROVIDER=openai  # "openai" or "google"

# OpenAI Compatible API (DALL-E, etc.)
OPENAI_IMAGE_API_KEY=your_openai_api_key_here
OPENAI_IMAGE_API_URL=https://api.openai.com/v1
OPENAI_IMAGE_MODEL=dall-e-3

# Google Imagen API
GOOGLE_IMAGE_API_KEY=your_google_api_key_here
GOOGLE_IMAGE_PROJECT_ID=your_project_id_here

# Task Configuration
TASK_RESULT_EXPIRES=86400
MAX_CONCURRENT_IMAGE_TASKS=3
